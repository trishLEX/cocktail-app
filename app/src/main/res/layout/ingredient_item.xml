<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="100"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_weight="0"
            android:layout_marginRight="5dp"
            android:layout_width="130dp"
            android:layout_height="130dp">
            <ImageView
                android:id="@+id/ingredientItemPreview"
                android:layout_width="130dp"
                android:layout_height="130dp" />
            <CheckBox
                android:id="@+id/ingredientShopCheckBox"
                android:button="@drawable/shop_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/ingredientItemName"
            android:layout_weight="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/ingredientItemCheck"
            android:button="@drawable/favourite"
            android:layout_marginRight="5dp"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
</androidx.cardview.widget.CardView>